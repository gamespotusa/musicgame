<script>
const words = [
    // ‚ù§Ô∏è Feelings & Relationships
    "Love","You","Me","Baby","Heart","Want","Need","Forever","Never","Always",
    "Alone","Together","Strong","Weak","Broken","Heal","Believe","Trust","Hope","Fear",
    // ‚è≥ Time & Life
    "Night","Day","Time","Life","Again","Away","Home","Lost","Found","High","Low",
    "Wait","Stay","Leave","Open","Close","Chase","Rise","Fall","Forever",
    // üéµ Actions & Expressions
    "Kiss","Touch","Hold","Smile","Tear","Cry","Dance","Sing","Run","Walk","Ride",
    "Shout","Scream","Laugh","Whisper","Burn","Shine","Glow","Fight","Breathe",
    // üåç Places & Nature
    "World","Dream","Sky","Star","Light","Dark","Rain","Fire","Free","True","Mine",
    "Us","Road","Highway","Wind","Ocean","River","Mountain","Moon","Sun"
];

const colors = ["#16a085", "#c0392b", "#2980b9", "#2c3e50", "#f39c12", "#8e44ad", "#27ae60"];
let remaining = [];
let score = 100;
let timer = null;
let timeLeft = 5;
let started = false;

const wordDisplay = document.getElementById('wordDisplay');
const scoreDisplay = document.getElementById('scoreDisplay');
const timerDisplay = document.getElementById('timerDisplay');
const nextBtn = document.getElementById('nextBtn');

function resetGame() {
    score = 100;
    started = false;
    remaining = [...words];
    wordDisplay.textContent = "Click Start";
    scoreDisplay.textContent = "Score: 100";
    timerDisplay.textContent = "Timer: 5";
    document.body.style.backgroundColor = "#111";
    nextBtn.textContent = "Start";
    nextBtn.disabled = false;
    clearInterval(timer);
    timeLeft = 5;
}

function startWordTimer() {
    clearInterval(timer);
    timeLeft = 5;
    timerDisplay.textContent = `Timer: ${timeLeft}`;
    timer = setInterval(() => {
        timeLeft--;
        timerDisplay.textContent = `Timer: ${timeLeft}`;
        if (timeLeft <= 0) {
            endGame("Time's Up!");
        }
    }, 1000);
}

function endGame(message) {
    clearInterval(timer);
    wordDisplay.textContent = `${message} Final Score: ${score}`;
    document.body.style.backgroundColor = "#111";
    nextBtn.disabled = true;
    nextBtn.textContent = "Game Over";
    timerDisplay.textContent = "Timer: 0";
}

function nextWord() {
    if (!started) {
        started = true;
        nextBtn.textContent = "Next";
        remaining = shuffle([...words]);
        scoreDisplay.textContent = `Score: ${score}`;
        startWordTimer();
    } else {
        score = Math.max(0, score - 1);
        scoreDisplay.textContent = `Score: ${score}`;
    }

    if (remaining.length === 0) {
        endGame("Game Over!");
        return;
    }

    // Show next word, random color
    const word = remaining.pop();
    const color = colors[Math.floor(Math.random() * colors.length)];
    document.body.style.backgroundColor = color;
    wordDisplay.textContent = word;

    startWordTimer();

    if (remaining.length === 0) {
        setTimeout(() => endGame("Game Over!"), 1000);
    }
}

function shuffle(arr) {
    for (let i = arr.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [arr[i], arr[j]] = [arr[j], arr[i]];
    }
    return arr;
}

nextBtn.addEventListener("click", nextWord);

// Optional: Double-click score to reset game
scoreDisplay.addEventListener("dblclick", resetGame);

// Modal popup logic
function openModal() {
  document.getElementById('popupModal').style.display = 'block';
}
document.getElementById('closeModalBtn').onclick = function() {
  document.getElementById('popupModal').style.display = 'none';
};
window.onclick = function(event) {
  if (event.target == document.getElementById('popupModal')) {
    document.getElementById('popupModal').style.display = "none";
  }
};
</script>

</body>
